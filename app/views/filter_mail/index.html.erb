<h1><%= @c %></h1>





<%= button_to "Filter all emails", filter_mail_start_filtering_path %>

<h1>Listing mails</h1>

<table border =1>
  <tr>
    <h1>Listing mails</h1><th>Subject:</th>
    <th>To:</th>
    <th>From:</th>
    <th>Category:</th>
    <th>Case:</th>
    <th>Body:</th>
  </tr>

  <% @emails.each do |email| %>
    <tr>
      <td><%= email.subject %></td>
      <td><%= email.to %></td>
      <td><%= email.from %></td>
      <td>
      <%unless email.category.blank? %>
      <%=email.category.name %>
      <% else %>
      -
      <% end %>
		</td>

    <td>
      <%unless email.case_id.blank? %>
      <%=email.case_id%>
      <% else %>
      -
      <% end %>
    </td>
		 
		<td><%= email.body %></td>

    </tr>
  <% end %>




</table>

<h1>Listing categories and their cases</h1>
<table border =1>
  <tr>
    <th>Name:</th>
    <th>cases:</th>
  </tr>
 
  <% @categories.each do |cat| %>
    <tr>
      <td><%= cat.name %></td>
    </tr>
    <tr>
      <td>
        <% cat.cases.each do |case1| %>
          <tr>
            <td>
              <%= case1.id %>
            </td>
          </tr>
        <% end %>
      </td>
    </tr>
  <% end %>




</table>
