<div class="pure-g">
    <div id="mail-list" class="pure-u-1-3">
      <ul>
          <% @emails.each do |email| %>
            <li id="mail-item">
              <h5 class="email-name">Tilo Mitra</h5>
              <h4 class="email-subject"><%= email.subject %></h4>
              <p class="email-desc">
                <%= email.body %>
              </p>
            </li>
          <% end %>

      </ul>
    </div>
    <div class="pure-u"><h4> Select email </h4></div>
</div>