<%= form_for @category, html: {class: "form-group"} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name,class: "form-control", placeholder: "Name"%>
  <br>
  <% if current_page?('categories/new') %>
  	<%= f.submit "Create", class: "btn btn-primary"%>
  <%else %>
  	<%= f.submit "Create", class: "btn btn-primary"%>
  <% end %>
<% end %>


