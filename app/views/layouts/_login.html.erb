<div class="col-md-4">
</div>
<div class="col-md-4">
    <div class="panel panel-primary" style ="margin-top: 50%;">
      <div class="panel-body">
        <%= form_tag sessions_path do %>
            <%#= label_tag :email %>
            <div class="form-group">
              <%= label_tag :email %>
              <%= text_field_tag :email, params[:email], placeholder: "Email", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= label_tag :password %>
              <%= password_field_tag :password, params[:password], placeholder: "Password", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= submit_tag "Log in", class: "btn btn-primary center-block" %>
            </div>
            <div class="form-group">
              <%= image_tag "bs_logo.png", class: "", style: "height:30px;" %>
              <%= link_to "Sign up", signup_path %>
            </div>
        <% end %>
      </div>
    </div>
</div>
<div class="col-md-4">
</div>