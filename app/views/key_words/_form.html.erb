<%= form_for @key_word, html: {class: "form-group"} do |f| %>
  <%= f.label :word %>
  <%= f.text_field :word,class: "form-control", placeholder: "Word"%>
  <br>
  <%= f.text_field :point,class: "form-control", placeholder: "Point"%>

  <%= select_tag 'key_word[category_id]', options_from_collection_for_select(@categories,  'id', 'name'), prompt: "Select category",class: "form-control" %>
  <br>
  <%= f.select :category_id, options_for_select(@key_word.category_id ) %>
  <% if current_page?('key_words/new') %>
  	<%= f.submit "Create", class: "btn btn-primary"%>
  <%else %>
  	<%= f.submit "Edit", class: "btn btn-primary"%>
  <% end %>
<% end %>